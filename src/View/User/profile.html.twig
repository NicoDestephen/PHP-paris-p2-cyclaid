{% extends 'layout.html.twig' %}

{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/profile.css">
{% endblock %}

{% block content %}

{% block nav %}
    {{ parent()}}
{% endblock %}
<div class="row">
    <div class="title_logo" id="logo" style="color: #133352">
        <h1>Cycl'aid</h1>
    </div>
    <div class="col-md-4 col-md-offset-6">
        <section id="profile">
            <div id="profile-picture">
            {% if user['profile_picture'] is not empty %}
                <img id="profile" src="/uploads/{{ user['profile_picture'] }}"></img>
            {% else %}
                <img id="profile" src="/assets/images/icon_user_profil_post.png"></img>
            {% endif %}
            </div>
            <div id="name-coin" >
                <h1 id="name" >{{ user['firstname'] ~ ' ' ~ user['lastname'] }}</h1>
                <div id="coin" >
                    <p id="coin-number" >{{ user['coin'] }}</p>
                    <img id="coin" src="/assets/images/icone_coin.png" ></img>
                </div>
            </div>
            <div id="sections" >
                <h2 id="my-bike" >MY BIKE</h2>
                <h2 id="my-posts" >MY POSTS</h2>
                <h2 id="my-wishes" >MY WISHES</h2>
            </div>
            <div id="section" >
                <link rel="stylesheet" href="/assets/css/postindex.css">

                {% for post in postsList %}

                    <a class="cardContainer" href="/post/show?id={{ post.id }}" >
                        {% include 'cardImageSelect.html.twig' %}
                        <div class="cardInfoContainer" >
                            <div class="cardTopContainer" >
                                {% include 'cardWearIcon.html.twig' %}
                                <p class="cardTitle" >{{ post.title }}</p>
                            </div>
                            <p class="cardDescription" >{{ post.description }}</p>
                            <div class="cardFooterContainerLeft" >
                                <img class="cardIconLocation" src="/assets/images/icon_location.png" >
                                <p class = "cardFooterInfos">{{ post.location }}</p>
                            </div>
                            <div class ="cardFooterContainerRight">
                                <img class="cardIconCalendar" src="/assets/images/icon_calendar.png" >
                                <p class="cardFooterInfos" >{{ post.creation_date }}</p>
                            </div>
                        </div>
                    </a>

                {% else %}
                    <div id="nothing">
                        <p>Nothing to display</p>
                    </div>

                {% endfor %}
            </div>
        </section>
    </div>
</div>
<footer id="footer"></footer>

{% endblock %}
