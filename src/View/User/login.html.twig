{% extends 'layout.html.twig' %}

{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/signin.css">
{% endblock %}

{% block content %}

{% block nav %}
    {{ parent()}}
{% endblock %}

<div class="row">
    <div class="title_logo" id="logo" style="color: #133352">
        <h1>Cycl'aid</h1>
    </div>
    <div class="col-md-4 col-md-offset-6">
        <section id="form_login">
            <form action="" method="post" enctype="multipart/form-data">
                <div>
                    <label for="email"></label>
                    <input type="email" name="email" id="log_email" placeholder="EMAIL" required/>
                </div>
                <p class="text-danger"> {{ errors['email'] }} </p>
                <div>
                    <label for="password"></label>
                    <input type="password" name="password" id="log_password" placeholder="PASSWORD" required/>
                </div>
                <p class="text-danger"> {{ errors['password'] }} </p>
                <p class="text-danger"> {{ errors['password_login'] }} </p>
                <div>
                    <input type="submit" id="cta_form_sign_in" value="LOGIN"/>
                </div>
            </form>
        </section>
    </div>
</div>
<footer id="footer"></footer>

{% endblock %}
