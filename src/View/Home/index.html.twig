{% extends 'layout.html.twig' %}


{% block content %}

{% block nav %}

{% include 'navbar.html.twig' %}
   
{% endblock %}

        <h1 class="title">Cycl'aid</h1>

{% block searchBar %}

{% include 'searchbar.html.twig' %}
    
